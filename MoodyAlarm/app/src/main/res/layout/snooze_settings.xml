<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Snooze Settings"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:text="Choose number of minutes until next alarm rings"
        android:id="@+id/textView4" />

    <Spinner
        android:id="@+id/window_amount"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:entries="@array/time_array" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:text="Choose the maximum number of times you can snooze"
        android:id="@+id/textView6" />

    <Spinner
        android:id="@+id/max_snooze"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:entries="@array/limit_array" />

    <View android:id="@+id/separator"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_width = "fill_parent"
        android:layout_height="3dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Challenge Settings"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Choose what challenges you want to solve to dismiss the alarm"/>

    <!--<ListView-->
        <!--android:id="@+id/list_view"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/voice"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/voicerecognition"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/voice"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:text="Say a Quote"
            android:textStyle="bold"
            android:id="@+id/voiceText" />

        <Switch
            android:id="@+id/voiceSwtich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginStart="50dp"
            android:textSize="15dp"
            android:text="Difficulty"
            android:id="@+id/voiceDiff"/>

        <SeekBar
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_toEndOf="@id/voiceDiff"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/sudoku"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/sudoku"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/sudoku"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:text="Sudoku"
            android:textStyle="bold"
            android:id="@+id/sudokuText" />

        <Switch
            android:id="@+id/sudokuSwtich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginStart="50dp"
            android:textSize="15dp"
            android:text="Difficulty"
            android:id="@+id/sudokuDiff"/>

        <SeekBar
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_toEndOf="@id/sudokuDiff"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/puzzle"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/puzzle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/puzzle"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:text="Set Puzzle"
            android:textStyle="bold"
            android:id="@+id/puzzleText" />

        <Switch
            android:id="@+id/puzzleSwtich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginStart="50dp"
            android:textSize="15dp"
            android:text="Difficulty"
            android:id="@+id/puzzleDiff"/>

        <SeekBar
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_toEndOf="@id/puzzleDiff"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/math"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/math"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/math"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:text="Simple Arithmetic"
            android:textStyle="bold"
            android:id="@+id/mathText" />

        <Switch
            android:id="@+id/mathSwtich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginStart="50dp"
            android:textSize="15dp"
            android:text="Difficulty"
            android:id="@+id/mathDiff"/>

        <SeekBar
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_toEndOf="@id/mathDiff"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>


