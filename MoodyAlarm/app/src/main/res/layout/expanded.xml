                    <!--android:layout_width="55dp"-->
                    <!--android:layout_height="55dp"-->
                    <!--android:id="@+id/dayPlaylist"-->
                    <!--android:layout_marginLeft="45dp"-->
                    <!--android:src="@drawable/calendar"-->
                    <!--android:clickable="true"/>-->

        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/transparentPurple"
            android:layout_marginTop="212dp"></View>

        <LinearLayout
            android:id="@+id/challenges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="220dp"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challenges:"
                android:layout_marginTop="15dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/voice"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/voicerecognition"
                android:clickable="true"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/sudoku"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/sudoku"
                android:clickable="true"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/puzzle"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/puzzle"
                android:clickable="true"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/math"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/math"
                android:clickable="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="50dp"
            >
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="Save"
                android:textColor="@color/white"
                android:id="@+id/save"
                android:background="@drawable/button_border"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Cancel"
                android:textColor="@color/white"
                android:id="@+id/cancel"
                android:background="@drawable/button_border"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    </RelativeLayout>

</RelativeLayout>
