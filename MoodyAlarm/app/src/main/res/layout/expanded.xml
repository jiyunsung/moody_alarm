<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scene_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:id="@+id/list_container"
        android:layout_width="335dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_expanded"
        android:layout_width="335dp"
        android:layout_height="290dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#25000000"
        android:layout_marginTop="20dp"
        android:transitionName="expand"
        >

    <Switch
        android:id="@+id/switchOnOff"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:layout_marginTop="35dp"
        android:focusableInTouchMode="false">
    </Switch>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:id="@+id/labelExpanded"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:text="12:00"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:clickable="true"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/sand"
                android:textSize="45dp"
                ></TextView>
            <TextView
                android:id="@+id/ampm"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:text="AM"
                android:padding="5dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/sand"
                android:textSize="25dp"
                ></TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = " Repeat"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"/>
            <CheckBox
                android:id="@+id/checkbox_vibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Vibrate"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="81dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/weekday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/buttonSun"
                android:text="SUN"
                android:gravity="center"
                android:textColor="@color/darkPurple"
                android:background="@android:color/transparent"
                android:clickable="true"/>

            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/buttonM"
                android:text="MON"
                android:gravity="center"
                android:textColor="@color/darkPurple"
                android:background="@android:color/transparent"
                android:clickable="true"/>

            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/buttonTue"
                android:text="TUE"
                android:gravity="center"
                android:textColor="@color/darkPurple"
                android:background="@android:color/transparent"
                android:clickable="true"/>

            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/buttonW"
                android:text="WED"
                android:gravity="center"
                android:textColor="@color/darkPurple"
                android:background="@android:color/transparent"
                android:clickable="true"/>

            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/buttonThur"
                android:text="THU"
                android:gravity="center"
                android:textColor="@color/darkPurple"
                android:background="@android:color/transparent"
                android:clickable="true"/>

            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/buttonF"
                android:text="FRI"
                android:gravity="center"
                android:textColor="@color/darkPurple"
                android:background="@android:color/transparent"
                android:clickable="true"/>

            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/buttonSat"
                android:text="SAT"
                android:textColor="@color/darkPurple"
                android:background="@android:color/transparent"
                android:clickable="true"/>

        </LinearLayout>


        <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/transparentPurple"
        android:layout_marginTop="140dp"></View>

    <!--<TextView-->
